@using u20553715_HW03.Models;
@model IEnumerable<u20553715_HW03.Models.FileModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="container-fluid">
    <div class="row">

        <div class="col-sm-6">

            <br />
            <br />
            <br />

            <h1>EvoMedia</h1>

            <h2>The Place to Store Media</h2>

            <p>
                EvoMedia is a file storage place.
                This system allows the user to store the different media types.
                Documents, Images and Video are the types of media that can be stored on the system.
                The sytem will allow the user to name the file, upload the file, download the file and delete the file.
                This system is useful for information organisation on a budget.
            </p>

        </div>

        <div class="col-sm-4">
            <br />
            <br />
            <br />
            <h2>Option Selection</h2>
            <br />
            <br />

            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
             {


                <div><input type="radio" name="File" value="Document" /> Document</div>
                <br />
                <div><input type="radio" name="File" value="Image" /> Image</div>
                <br />
                <div><input type="radio" name="File" value="Video" /> Video</div>
                <br />
                <div><input type="file" name="File" value="files" /></div>
                <br />
                <div><input type="submit" value="Submit" /></div>
             }
        </div>
       



    </div>


</div>