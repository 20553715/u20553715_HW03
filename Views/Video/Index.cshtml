
@using u20553715_HW03.Models;
@model IEnumerable<u20553715_HW03.Models.FileModel>

@{
    ViewBag.Title = "Videos";
}
<head>
    <style type="text/css">
        .auto-style {
            color: #FFFFFF;
        }

        .t {
            text-align: center;
            vertical-align: middle;
        }
    </style>
</head>

<br />
<br />
<br />
<div class="well-sm">
    <h2>File Download / Delete</h2>
    <p>
        This is for DOWNLOADING files from the "Media/Videos" folder
    </p>
</div>



<div class="container-fluid ">


    @foreach (var FileModel in Model)
    {
        <div class="card-deck">


            <div class="card  mb-3">

                <div class="card-body text-dark">
                    <video class="card-img card-img-top" controls>
                        <source src="~/Media/Videos/@FileModel.FileName" />
                    </video>
                    <br> <br>
                    <h4 class="card-title text-dark">@FileModel.FileName</h4>


                </div>

                <div class="card-footer text-center float-left ">

                    <button class="btn btn-success">
                        @Html.ActionLink("Download", "DownloadFile",
                         new { fileName = FileModel.FileName })
                    </button>

                    <button class="btn btn-danger">
                        @Html.ActionLink("DELETE", "DeleteFile",
                       new { fileName = FileModel.FileName },
                       new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                    </button>


                </div>

            </div>
        </div>
    }

    <script>
            $(document).ready(function ($) {
                $(".gallery a").fancybox();
            });
    </script>

</div>
